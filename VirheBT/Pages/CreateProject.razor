@inject NavigationManager NavigationManager
    <AuthorizeView>
        <Authorized>
            <Modal @ref="createProjectModal">
                <ModalContent Size="ModalSize.Large">
                        <ModalHeader>
                            <ModalTitle>Create new project</ModalTitle>
                            <CloseButton />
                        </ModalHeader>
     

                        <ModalBody>
                            <Column ColumnSize="ColumnSize.Is12" Padding="Padding.Is0.OnX" Margin="Margin.Is0.OnX">
                                <Field >
                                    <FieldLabel>
                                        Project Name:
                                    </FieldLabel>
                                    <FieldBody>
                                        <TextEdit @bind-Text="@title" Placeholder="Name..." />
                                    </FieldBody>
                                </Field>
                            </Column>
                            <Column ColumnSize="ColumnSize.Is6" Padding="Padding.Is0.OnX" Margin="Margin.Is0.OnX">
                                <Field>
                                    <FieldLabel>
                                        Maintainer:
                                    </FieldLabel>
                                    <FieldBody>
                                        <TextEdit Placeholder="@context.User.Identity.Name" Disabled="true" />
                                    </FieldBody>
                                </Field>
                            </Column>
                            <Row>
                                <Column ColumnSize="ColumnSize.Is12" >
                                    <Field>
                                        <FieldLabel>
                                            Description:
                                        </FieldLabel>
                                        <FieldBody>
                                            <MemoEdit Rows="5" @bind-Text="@description" />
                                        </FieldBody>
                                    </Field>
                                </Column>
                            </Row>
                           
                        </ModalBody>
                        <ModalFooter>
                         
                                    <Button Color="Color.Primary" Clicked="@OnCreateAsync" Float="Float.Right" Margin="Margin.Is2.OnX"> Create project</Button>
                                    <Button Color="Color.Secondary" Clicked="@HideModal" Float="Float.Right"> Cancel</Button>
                              
                        </ModalFooter>
                </ModalContent>
            </Modal>
        </Authorized>
    </AuthorizeView>
    @code{
       
        private Modal createProjectModal;

        public void ShowModal()
        {
            createProjectModal.Show();
        }

        private void HideModal()
        {
            createProjectModal.Hide();
        }
    }