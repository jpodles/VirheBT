@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1 class="text-center">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class=" nav-link btn btn-info d-flex mx-auto">Click here to Logout</button>
            </form>
        }
        else
        {
            <div class="card d-flex mx-auto">
                <div class="card-body d-flex mx-auto ">
                    <div class="card-text">
                        <div class="d-flex flex-row">
                            <div class="p-2"><h3>You have successfully logged out of the application.</h3></div>
                        </div>
                        <div class="d-flex flex-row justify-content-center">
                            <div class="p-2">

                                <a href="~/" class="btn btn-primary nav-link">
                                    Go to main page
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
</header>